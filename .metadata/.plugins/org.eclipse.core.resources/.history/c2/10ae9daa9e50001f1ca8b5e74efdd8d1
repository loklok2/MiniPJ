package com.sbs;

import org.springframework.boot.CommandLineRunner;
import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.Configuration;
import org.springframework.security.crypto.password.PasswordEncoder;

import com.sbs.domain.Member;
import com.sbs.domain.Role;
import com.sbs.persistence.MemberRepository;

@Configuration
public class DataInitializer {

    @Bean
    CommandLineRunner initAdminAccount(MemberRepository memberRepository, PasswordEncoder passwordEncoder) {
        return args -> {
            // 관리자 계정이 이미 존재하는지 확인
            if (!memberRepository.existsByUsername("admin")) {
                Member admin = Member.builder()
                        .username("admin")
                        .password(passwordEncoder.encode("admin1234")) // 원하는 비밀번호로 설정
                        .roles(Role.ROLE_ADMIN) // 관리자 권한 설정
                        .build();
                
                memberRepository.save(admin);
                System.out.println("관리자 계정이 생성되었습니다: admin / admin1234");
            } else {
                System.out.println("관리자 계정이 이미 존재합니다.");
            }
        };
    }
}
